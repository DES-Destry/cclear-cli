{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2020"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
    ]
  },
  "include": ["src/bin", "src/lib"],
  "exclude": ["node_modules", "e2e"]
}
