{
    "name": "cclear-cli",
    "version": "0.0.1",
    "description": "Clear cache of common and development apps with one command",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "engines": {
        "node": ">= 14.0.0"
    },
    "bin": {
        "cclear": "dist/bin/cclear.js"
    },
    "scripts": {
        "lint": "eslint --ext .ts .",
        "lint:fix": "eslint --ext .ts . --fix",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|json)\"",
        "build": "rm -rf dist && tsc",
        "start": "node dist/bin/cclear.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format && npm run build"
        }
    },
    "keywords": [
        "cli",
        "cache",
        "util",
        "tools",
        "macos"
    ],
    "author": "Destry.Unimaster <dev.andrey.kirik@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.0.1",
        "chalk-animation": "^1.3.0",
        "figlet": "^1.5.2",
        "inquirer": "^8.2.1",
        "nanospinner": "^1.0.0"
    },
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/chalk-animation": "^1.6.1",
        "@types/figlet": "^1.5.4",
        "@types/inquirer": "^8.2.0",
        "@types/node": "^17.0.22",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^7.0.4",
        "prettier": "^2.6.0",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0"
    }
}
